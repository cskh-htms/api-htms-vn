<script>
$(document).ready(function($){
/////////////////////////////////////////////////////	
	//

	
	
	// ajax luu san pham
	$(document).on('click','#btn_save',function(e) {		
		e.preventDefault();
		//alert("hú hú");
		//return;
		
			
		//@
		
		let stores_name = $('#stores_name').val();
		let stores_user_id = $('#user_id').val();
		
		let stores_service_type_id = $('#stores_service_type_id  option:selected').val();	
		
		let stores_adress = $('#stores_adress').val();
		
		let stores_local_x = $('#stores_local_x').val();
		let stores_local_y = $('#stores_local_y').val();
		
		let stores_province = $('#stores_province').val();
		let stores_district = $('#stores_district').val();
		let stores_wards = $('#stores_wards').val();		
		let stores_local_adress = $('#stores_local_adress').val();
		
		
		let stores_phone = $('#stores_phone').val();
		
		let stores_info_banking = $('#stores_info_banking').val();
		let stores_qoute = $('#stores_qoute').val();
		
		let stores_status = $('#stores_status  option:selected').val();
		let stores_status_stores = $('#stores_status_stores  option:selected').val();
		
		
		let stores_payment_limit = $('#stores_payment_limit').attr("data_value");
		
		let store_id = $('#store_id').val();
		let stores_status_update = $('#stores_status_update').val();
	
		let stores_upload_limit_day = $('#stores_upload_limit_day').val();
		let stores_upload_limit_month = $('#stores_upload_limit_month').val();

	
		
		//@
		
		//@
		//@

		//
		let datas = {
			"datas":{
				stores_name : stores_name,
				stores_user_id: stores_user_id,
				stores_service_type_id : stores_service_type_id,
				stores_province : stores_province,
				stores_district : stores_district,
				stores_wards : stores_wards,				
				stores_adress : stores_adress,
				stores_local_x : stores_local_x,
				stores_local_y : stores_local_y,
				stores_local_adress : stores_local_adress,
				stores_phone : stores_phone,
				stores_payment_limit : stores_payment_limit,
				stores_info_banking : stores_info_banking,
				stores_qoute : stores_qoute,
				stores_status : stores_status,
				stores_status_stores : stores_status_stores,
				stores_upload_limit_day :stores_upload_limit_day,
				stores_upload_limit_month : stores_upload_limit_month,
				stores_status_update : stores_status_update				
			}
		}
		//console.log(datas);		
		//return;
		
		ojs_bussiness.ajax_update(datas,store_id);	
		
	});//end of save ajax
	//
	//
///////////////////////////////////////////////////////
});//end of document
</script>



