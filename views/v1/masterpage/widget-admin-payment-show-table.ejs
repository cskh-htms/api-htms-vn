
<% if( typeof orders_report_store == 'object' && orders_report_store && orders_report_store.length > 0){  } else{ orders_report_store=[] } %>
<% if( typeof stores_payment_list == 'object' && stores_payment_list && stores_payment_list.length > 0){  } else{ stores_payment_list=[] } %>


<%
if(orders_report_store.length == 0){
%>
	<div class="not_order"><span>Chưa có đơn hàng nào ...... </span></div>
<% } else{
	
%>
	<table class="table-list">
		<thead>
			<tr>
				<th class="user-name">Tên cửa hàng</th>
				<th class="user-name">Tổng tiền sản phẩm bán</th>
				<th class="user-name">Tổng tiền chiết khấu</th>
				<th class="user-name">Tiền thanh toán</th>
				<th class="user-name">Hạn mức thanh toán</th>
				<th class="user-name">Trạng thái thanh toán</th>
			</tr>
		</thead>
		<tbody>
		

	<% 
	if(orders_report_store.length > 0){
	for( var  x in orders_report_store ) { 
		var payment_limit = 0;
		var payment_status = "Chưa Đạt mức";
		var payment_price = orders_report_store[x].view_order_report_price_caution_sum - orders_report_store[x].view_order_report_discount_caution_sum;
		for( var  y in stores_payment_list ) { 
			if(orders_report_store[x].view_order_report_stores_id == stores_payment_list[y].stores_ID ){
				payment_limit = stores_payment_list[y].stores_payment_limit;
				if((orders_report_store[x].view_order_report_price_caution_sum - orders_report_store[x].view_order_report_discount_caution_sum) -  payment_limit >= 0){
					payment_status = '<button class="payment_now" '  + 
						'data_payment_stores_id="' + stores_payment_list[y].stores_ID + '" ' + 
						'data_payment_price="' + payment_price + '" ' +  
						'>Chuyển khoản</button>';
				}
			}
		}
	%>


	   <tr>
			<td class="user-name"><%- orders_report_store[x].view_order_report_stores_name %></td>
			<td class="user-name"><%- ojs_share.show_price_vnd(orders_report_store[x].view_order_report_price_caution_sum,0,",",".","đ") %></td>
			<td class="user-name"><%- ojs_share.show_price_vnd(orders_report_store[x].view_order_report_discount_caution_sum,0,",",".","đ") %></td>
			<td class="user-name">
				<%- ojs_share.show_price_vnd(
					orders_report_store[x].view_order_report_price_caution_sum - orders_report_store[x].view_order_report_discount_caution_sum,0,",",".","đ") 
				%>
			</td>
			
			<td class="user-name"><%- ojs_share.show_price_vnd(payment_limit,0,",",".","đ") %></td>
			
			<td class="user-name"><%- payment_status %></td>
			
	   </tr>


	<% 
	}
	}
	%>


		
		</tbody>
		<tfoot>
			<tr>
				<th class="user-name">Tên cửa hàng</th>
				<th class="user-name">Tổng tiền sản phẩm bán</th>
				<th class="user-name">Tổng tiền chiết khấu</th>
				<th class="user-name">Tiền thanh toán</th>
				<th class="user-name">Hạn mức thanh toán</th>
				<th class="user-name">Trạng thái thanh toán</th>
			</tr>
		</tfoot>
	</table>
<% 
}
%>