<% if( typeof coupon_list == 'object' && coupon_list){ } else{ coupon_list=[] } %>

<table class="table-list">
	<thead>
		<tr>
			<th class="user-name">Mã code</th>
			<th class="user-name">Ngày bắt đầu</th>
			<th class="user-name">Ngày kết thúc</th>
			<th class="user-name">Tên công thức</th>
			<th class="user-name">Giá khuyến mãi</th>
		</tr>
	</thead>
	<tbody>
	

	<% 
	for( var  x in coupon_list ) { 
	%>

	   <tr>
			<td class="user-name"><a href="#"><%- coupon_list[x].coupon_speciality_code %></a>
				<div class="row-actions">
					<span class="edit"><a href="/coupon/speciality/show/<%= coupon_list[x].coupon_speciality_ID  %>">Chỉnh sửa</a> | </span>
					<span class="delete"><a href="#" data_coupon_id="<%= coupon_list[x].coupon_speciality_ID  %>" class="submitdelete">Xóa</a></span>
				</div>
			</td>
			
			<td class="user-name"><%= coupon_list[x].coupon_speciality_date_star %></td>				
			<td class="user-name"><%= coupon_list[x].coupon_speciality_date_end %></td>	
			<td class="user-name"><%- ojs_share.show_coupon_formula_table(coupon_list[x].coupon_speciality_formula) %></td>			
			<td class="user-name"><%= ojs_share.show_price_vnd(coupon_list[x].coupon_speciality_price,0,",",".","đ") %></td>			

	   </tr>



	<% } %>
	
	</tbody>
	<tfoot>
		<tr>
			<th class="user-name">Mã code</th>
			<th class="user-name">Ngày bắt đầu</th>
			<th class="user-name">Ngày kết thúc</th>
			<th class="user-name">Tên công thức</th>
			<th class="user-name">Giá khuyến mãi</th>		
		</tr>
	</tfoot>
</table>