

<% if( typeof datas == 'object' && datas){ } else{ datas=[] } %>

<table class="table-list">
	<thead>
		<tr>
			<th class="user-name">Tên thương hiệu</th>
			<th class="user-name">trạng thái admin</th>
			<th class="user-name">trạng thái cửa hàng</th>		
		</tr>
	</thead>
	<tbody>

	<% 
	for(var  x in datas) { %>
	
			<% //nếu chủ cữa hàng thì hiện màu đỏ
			if(datas[x].brands_stores_id == store_id  &&  user_role != "admin"){ 		
				var ex1 = 'my_store';
			}else{
				var ex1 = '';
			}
			%>				
	
	
		   <tr class="<%= ex1 %>">
			<td class="user-name"><a href="#"><%= datas[x].brands_name %></a>
				<div class="row-actions">
					<% //nếu là admin thì hiển thị update
					if(user_role == "admin" ||  datas[x].brands_stores_id == store_id){ %>
						<% //neu nếu đã chấp nhận thì ko cho update nua
						if( datas[x].brands_status_update != "1"){ %>				
							<span class="edit"><a href="/brands/show/<%= datas[x].brands_ID %>/<%= store_id %>">Chỉnh sửa</a> | </span>
							<span class="delete"><a href="#" data_brand_id="<%= datas[x].brands_ID %>" class="submitdelete">Xóa</a></span>
						<% //enf of if
						}
						%>	
					<% //enf of if
					}
					%>
					
				</div>
			</td>
				
			<td class="user-name"><%- ojs_share.show_status_table_share_all(datas[x].brands_status_admin) %></td>
			<td class="user-name"><%- ojs_share.show_status_table_share_all(datas[x].brands_status_stores) %></td>

	   </tr>
	<% 
	} %>

	</tbody>
	<tfoot>
		<tr>
			<th class="user-name">Tên danh thương hiệu</th>
			<th class="user-name">trạng thái admin</th>
			<th class="user-name">trạng thái cửa hàng</th>			
		</tr>
	</tfoot>
</table>