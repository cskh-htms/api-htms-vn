
<% if( typeof title == 'string' && title){ title = title } else{ title="" } %>
<% include ../../masterpage/loader %>

<script src="../../../javascripts/class-coupon-speciality.js"></script>	

<div id="page_wrap" class="page_wrap">
<div id="layout" class="page_width layout">
<div id="content-wrap" class="content_wrap">
<!-- --------------------
page wrap 
--------------------- -->
<% include ../../masterpage/header %>



<!-- --------------------
content
--------------------- -->
<div id="content" class="content coupon">
	<h1><%= title %></h1>
	<div class="noi_dung_coupon">
		<div class="thong_tin_coupon">
			<p><span>Mã coupon</span><input type="text" value="<%= datas[0].coupon_speciality_code %>" id="coupon_speciality_code" /> </p>
			<p><span>Ngày bắt đầu</span><input type="text" value="<%= datas[0].coupon_speciality_date_star %>" id="coupon_speciality_date_star" /> </p>
			<p><span>Ngày kết thúc</span><input type="text" value="<%= datas[0].coupon_speciality_date_end %>" id="coupon_speciality_date_end" /> </p>

			<p><span>Loại coupon<span>
				<select id="coupon_speciality_type">
					<%- ojs_share.show_coupon_type_select(datas[0].coupon_speciality_type ) %>
				</select>	
			</p>
			
			<p>
			<span>Điều kiện<span>
				<select id="coupon_speciality_condition">
					<%- ojs_share.show_coupon_condition_select(datas[0].coupon_speciality_condition ) %>
					<input 
						class="number_change" type="text" 
						data_value="<%= datas[0].coupon_speciality_condition_value %>"
						value="<%= ojs_share.show_price_format(datas[0].coupon_speciality_condition_value,0,",",".","") %>" 
						id="coupon_speciality_condition_value" 
					/>
				</select>	
			</p>
		</div>
		<div class="cong_thuc_coupon">
			<p>
			<span>Tên công thức<span>
				<select id="coupon_speciality_formula">
					<%- ojs_share.show_coupon_formula_select(datas[0].coupon_speciality_formula ) %>
				</select>	
			</p>

			<p><span>Tiền giảm giá </span>
				<input 
					class="number_change" type="text" 
					data_value="<%= datas[0].coupon_speciality_price %>"
					value="<%= ojs_share.show_price_format(datas[0].coupon_speciality_price,0,",",".","") %>" 
					id="coupon_speciality_price" 
				/>
			</p>
			
			
			<p><span>Giảm giá tối đa</span>
				<input 
					class="number_change" type="text" 
					data_value="<%= datas[0].coupon_speciality_price_max %>"
					value="<%= ojs_share.show_price_format(datas[0].coupon_speciality_price_max,0,",",".","") %>" 
					id="coupon_speciality_price_max" 
				/>
			</p>	
			
			<p><span>Số lượng dùng tối đa</span>
				<input 
					class="number_change" type="text" 
					data_value="<%= datas[0].coupon_speciality_qty %>"
					value="<%= ojs_share.show_price_format(datas[0].coupon_speciality_qty,0,",",".","") %>" 
					id="coupon_speciality_qty" 
				/>
			</p>		

			<p>
			<span>Dùng chung với mã giảm giá khác<span>
				<select id="coupon_speciality_multi">
					<%- ojs_share.show_coupon_multi_select(datas[0].coupon_speciality_multi ) %>
				</select>	
			</p>	
		</div>
	</div>
	
	<!-- ------------------
	Mô tả coupon
	------------------- -->
	<div class="value_row">
		<span>Mô tả coupon</span>
		<textarea class="noi_dung"  id="noi_dung"  rows="20" cols="100%"><%- ojs_share.unCape(datas[0].coupon_speciality_info) %></textarea>
	</div>
	<!-- ------------------
	//Mô tả danh mục
	------------------- -->
	
	
	
	
	
	
	
	
	
	
	

<div class="btn_box">
	<a href="/coupon/speciality/" class="btn_back">Quay về</a>
	<button id="btn_save" class="btn_save">Save</button>
</div>	
	
<input type="hidden" id="coupon_id" value="<%= coupon_id %>"/>	
<input type="hidden" id="users_id" value="<%= users_id %>"/>


</div>

<!-- --------------------
end content
--------------------- -->








<% include ../../masterpage/footer %>

</div><!-- //content_wrap -->	


<% include ../../masterpage/sidebar %>

<!-- --------------------
//end of page wrap 
--------------------- -->
</div><!-- //layout -->	
</div><!-- //pagewrap -->



<script>
$(document).ready(function($){
/////////////////////////////////////////////////////	
	//
	//@
	ojs_loader.loadTinyMCE('noi_dung');
	
	
	// ajax luu san pham
	$(document).on('click','#btn_save',function(e) {		
		e.preventDefault();
		//alert("hú hú");
		//return;
		

		//@
		let coupon_id = $('#coupon_id').val();
		let coupon_speciality_date_star = $('#coupon_speciality_date_star').val();
		let coupon_speciality_date_end = $('#coupon_speciality_date_end').val();
		
		let coupon_speciality_code = $('#coupon_speciality_code').val();
		
		let coupon_speciality_condition_value = $('#coupon_speciality_condition_value').attr("data_value");
		
		let coupon_speciality_price = $('#coupon_speciality_price').attr("data_value");
		
		let coupon_speciality_price_max = $('#coupon_speciality_price_max').attr("data_value");
		
		let coupon_speciality_qty = $('#coupon_speciality_qty').val();
			
		//@
		//@
		let coupon_speciality_type = $('#coupon_speciality_type  option:selected').val();
		let coupon_speciality_formula = $('#coupon_speciality_formula  option:selected').val();
		let coupon_speciality_condition = $('#coupon_speciality_condition  option:selected').val();
		let coupon_speciality_multi = $('#coupon_speciality_multi  option:selected').val();	
		//@
		let coupon_speciality_info = tinymce.get("noi_dung").getContent();
		//
		let datas = {
			"datas":{
				coupon_speciality_date_star : coupon_speciality_date_star,
				
				coupon_speciality_date_end : coupon_speciality_date_end,
				
				coupon_speciality_code : coupon_speciality_code,
				
				coupon_speciality_condition_value : coupon_speciality_condition_value,
				
				coupon_speciality_price : coupon_speciality_price,
				
				coupon_speciality_price_max : coupon_speciality_price_max,
				
				coupon_speciality_qty : coupon_speciality_qty,
				
				coupon_speciality_type : coupon_speciality_type,
				
				coupon_speciality_formula : coupon_speciality_formula,
				
				coupon_speciality_condition : coupon_speciality_condition,
				
				coupon_speciality_info : coupon_speciality_info,
				
				coupon_speciality_multi : coupon_speciality_multi			
			}
		}
		//console.log(datas);		
		//return;
		
		ojs_coupon_speciality.ajax_update(datas,coupon_id);	
		
	});//end of save ajax
	//
	//
///////////////////////////////////////////////////////
});//end of document
</script>












<% include ../../masterpage/loader-end %>






