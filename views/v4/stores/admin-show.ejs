		<br>
		<div class="pro_box">
			<h3>Trạng thái</h3>
			<div class="inside">
				<select id="stores_status_admin">
					<%- ojs_share_store.show_status_select_store(datas[0].stores_status_admin ) %>
				</select>
			</div>
		</div>			
		
	</div>
