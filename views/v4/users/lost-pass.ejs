<div id="content" class="content login-wrap">
	<div class="login-box">
		<div class="logo">
			<img src="/images/dala-logo.jpg">
		</div>
		<br>
		<div class="input-box">
			<span>Nhập email hoặc số điện thoại</span>
			<input type="text" value="" id="user_login_name" />
		</div>
		<br>
		<div class="input-box">
			<Button id="send">Send</Button>
		</div>		
	</div>
</div>
