<% include ../masterpage/loader-end %>

<script>
	$(document).ready(function(){
	

		//end of test
		//login
		$(document).on('click','#send',function(e) {
			let user_login_name = $('#user_login_name').val();
			
			//check trong du lieu
			if(user_login_name == ""){
				var x = "Vui lòng nhập dữ liệu";
				ojs_message.message_ok_show(x);
				return;
			}
			//tao data
			var datas = { 
				datas:{ email_or_phone: user_login_name }
			};
			
			
			//console.log(datas);
			//return;
			
			//goi api
			$.ajax({
				type : "POST",	  
				contentType : "application/json",
				url : ojs_loader.host + "/lost-pass",
				data : JSON.stringify(datas),
				dataType : 'json',
				beforeSend:  function(xhr){
					ojs_loadding.ajax_show_loadding();
				},			  
				error: function (request, status, error) {
					ojs_loader.show_ajax_error(error);
					ojs_loadding.ajax_hide_loadding();
				},
				success : function(result) {
					//console.log(result);
					//ojs_loadding.ajax_hide_loadding();
					//return;
					
					//ojs_loader.evn = "dev";
					if(ojs_loader.evn == "dev"){
						ojs_message.message_ok_show("Lấy dữ liệu thành công. xem datas ở console");
						console.log(result);
					}else{
						if(result.error.length > 0){
							ojs_message.message_ok_show(result.message);
						}else{
							ojs_message.message_ok_show("đã gữi mật khẩu mới cho bạn","/login");
						}
					}	
				
					ojs_loadding.ajax_hide_loadding();
				}			  
			});
		});
	});
</script>	










