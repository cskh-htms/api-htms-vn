<div id="content" class="content">

	<h1><a href="/stores/manage/<%= store_id %>/<%= user_id %>"><%= store_name %></a><i class="fas fa-chevron-right"></i>Mã giảm giá DALA</h1>
	<div style="display:flex; justify-content: space-between;align-items: center;flex-wrap:wrap;">
		<div class="sap_xep_wrap">
			<a href="/coupon/speciality/add/<%= store_id %>/<%= user_id %>" class="btn_green">Tạo mã giảm giá</a>
		</div>


		<%
		if(coupon_list.length > 0){
		%>
		<div class="coupon_content" style="width: 100%; padding-top: 50px;">
			<%
			for(x in coupon_list ){
			%>
				<div class="coupon">
					<div class="coupon_title"><%- ojs_share.unCape(coupon_list[x].coupon_speciality_code) -%></div>
					<div class="coupon_info">



						<div class="coupon_giam"><%- ojs_share_coupon.show_name_formula_coupon(
						coupon_list[x].coupon_speciality_formula_price,
						coupon_list[x].coupon_speciality_formula_price_value
						) -%></div>
						<div class="coupon_don_tu">
							<%- ojs_share_coupon.show_name_formula_condition_coupon(coupon_list[x].coupon_speciality_condition,
							ojs_share_all.show_price_vnd(coupon_list[x].coupon_speciality_condition_value,0,",",".","đ")
							) -%>					
						
						</div>
						<div class="coupon_don_tu">
							Tối đa : <%- ojs_share_all.show_price_vnd(coupon_list[x].coupon_speciality_price_max,0,",",".","đ") -%>						
						</div>	

						<div class="discount-status">
							<span>Trạng thái : <%- ojs_share.show_status_discount_detail_html(coupon_list[x].coupon_speciality_status_admin) -%>
						</div>	
						
						<%
						if(coupon_list[x].check_expired_coupon == 0){
						%>						
							<div class="coupon_da_dung" style="color:red;font-size:10px;">Bắt đầu: <%- ojs_share_all.format_date_coupon(coupon_list[x].coupon_speciality_date_star) %></div>
							<div class="coupon_thoi_han" style="color:red;font-size:10px;">Kết thúc: <%- ojs_share_all.format_date_coupon(coupon_list[x].coupon_speciality_date_end) %></div>
						<%
						}else{
						%>	
							<div class="coupon_da_dung" style="color:green;font-size:10px;">Bắt đầu: <%- ojs_share_all.format_date_coupon(coupon_list[x].coupon_speciality_date_star) %></div>
							<div class="coupon_thoi_han" style="color:green;font-size:10px;">Kết thúc: <%- ojs_share_all.format_date_coupon(coupon_list[x].coupon_speciality_date_end) %></div>
						
						<%
						}
						%>	


						
						<div style="">
						<a href="/coupon/speciality/show/<%= coupon_list[x].coupon_speciality_ID %>/<%= store_id %>"> Update </a>  |  
						<a href="#" class="submitdelete" data_id="<%= coupon_list[x].coupon_speciality_ID %>"> Delete </a>
						</div>
					</div>
					
					
					

					
				</div>	
			<%
			}//end of for
			%>
		</div>
		<%
		}//end of length
		%>
	</div>
	<input type="hidden" id="user_id" value="<%= user_id %>"/>
	<input type="hidden" id="store_id" value="<%= store_id %>"/>
