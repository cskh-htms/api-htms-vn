<div id="content" class="content">

	<h1><%= title %></h1>



	<!-- --------------------
		//1. Hiển thị tin tức
	--------------------- -->


		<%-  //JSON.stringify(news_bussiness_menu); -%>
		<%-  //ojs_share.show_news_bussiness_menu_html(news_bussiness_menu,3) -%>
