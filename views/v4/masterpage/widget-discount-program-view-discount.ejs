<div id="content" class="content" style="width: 100%;max-width: 480px; padding: 30px; background-color: white; border-radius: 10px;">
<div id="content-inner">


	<div class="content-image">
		<img src="<%- datas[0].discount_program_featured_image -%>" style="max-width:100%; marginBottom: 10px;"/>
	</div>

	<div class="content-title">
		<span>Tên CTKM:</span>
		<strong style="color: #4a914b;">[ <%- datas[0].discount_program_name -%> ]</strong>
		<br>
	</div>
	<hr>

	<div class="content-date">
		<span>Thời gian:</span><br>
		
		<%
		var star;
		var end;
		if(!datas[0].discount_program_date_star){
			star = "Không có hạn";
		}else{
			star = ojs_share_discount.format_date_discount(datas[0].discount_program_date_star);
		}
		if(!datas[0].discount_program_date_end){
			end = "Không có hạn";
		}else{
			end = ojs_share_discount.format_date_discount(datas[0].discount_program_date_end);
		}		
		%>
		
		<%- star %>
		- 
		<%- end %>
		
	</div>



	<hr>	
	
	
	
	<div class="content-information">
		<span>Nội dung:</span>
		<br>
		<br>
		<%- datas[0].discount_program_information -%>
	</div>







</div>
</div>

<!-- --------------------
end content
--------------------- -->











