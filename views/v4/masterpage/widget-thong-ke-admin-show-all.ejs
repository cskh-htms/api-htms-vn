

<% if( typeof order_list == 'object' && order_list){ } else{ order_list=[] } %>
<%
if(order_list.length == 0){
%>
	<div class="not_order"><span>Chưa có đơn hàng nào ...... </span></div>
<% } else{
%>	
	
	<table class="table-list">
		<thead>
			<tr>
				<th class="user-name">STT</th>
				<th class="user-name">ID đơn hàng</th>
				<th class="user-name">Ngày đặt hàng</th>
				<th class="user-name">Tổng tiền hàng</th>
				<th class="user-name">Cửa hàng</th>
				<th class="user-name">Địa chỉ</th>
				<th class="user-name">Ghi chú</th>				
				<th class="user-name">Hoàn thành</th>
				<th class="user-name">Công nợ</th>
			</tr>
		</thead>
		<tbody>
		

		<% 
		var i = 1;
		for( var  x in order_list ) { 
		%>

		   <tr>
				<td class="user-name"><%= i %></a>
				<td class="user-name"><a href="#">#<%- order_list[x].orders_speciality_ID %></a>
					<div class="row-actions">
						<span class="edit"><a data_id="<%- order_list[x].orders_speciality_ID %>" href="#">Thanh toán công nợ</a> | </span>
					</div>
				</td>
				
				<td class="user-name"><%- order_list[x].orders_speciality_date_orders %></td>
				<td class="user-name"><%- ojs_share_all.show_price_format(order_list[x].orders_speciality_total_product,0,",",".","đ") %></td>
		
				<td class="user-name"></td>
				<td class="user-name">
				</td>
				<td class="user-name"></td>
							
				<td class="user-name"><%- ojs_share_orders.show_order_status_html(order_list[x].orders_speciality_status_orders) %></td>
				<% 
				if(order_list[x].payment_period_ID == null){				
				%>
					<td class="user-name"><span style="color:red;">Chưa thanh toán</td>	
				<%
				}else{
				%>	
					<td class="user-name"><span style="color:green;">Đã thanh toán</td>					
				<%
				}
				%>					
				
		   </tr>


		<% 
		i = i + 1;
		} 
		%>
		
		</tbody>
		<tfoot>
			<tr>
				<th class="user-name">STT</th>
				<th class="user-name">ID đơn hàng</th>
				<th class="user-name">Ngày đặt hàng</th>
				<th class="user-name">Khách hàng</th>
				<th class="user-name">Cửa hàng</th>				
				<th class="user-name">Địa chỉ</th>
				<th class="user-name">Ghi chú</th>
				<th class="user-name">Hoàn thành</th>
				<th class="user-name">Công nợ</th>
				
			</tr>
		</tfoot>
	</table>
<% 
}
%>

<script>
$(document).ready(function($){
/////////////////////////////////////////////////////	
	$('.status_nomal').each(function(index, value) {
		if($(this).html() == "Cửa hàng đã từ chối đơn hàng"){
			$(this).css('color','red');
		}
	});
	
});//end of document
</script>










