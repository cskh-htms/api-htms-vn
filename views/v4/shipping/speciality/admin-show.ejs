<script>
$(document).ready(function($){
/////////////////////////////////////////////////////

	// ajax luu san pham
	$(document).on('click','#btn_save',function(e) {		
		e.preventDefault();
		//alert("hú hú");
		//return;
		
		let shipping_speciality_name = $('#shipping_speciality_name').val();	
		let shipping_id = $('#shipping_id').val();
		//@
		let shipping_speciality_price = $('#shipping_speciality_price').val();
		let shipping_speciality_code = $('#shipping_speciality_code').val();
		
		
		//@
		let shipping_speciality_show = $('#shipping_speciality_show  option:selected').val();
		let shipping_speciality_parent_id = $('#shipping_speciality_parent_id  option:selected').val();
		
		
		if(shipping_speciality_name == ""){
			ojs_message.message_ok_show("Chưa nhập tên khu vực");
			return;
		}		
		
		
		if(shipping_speciality_parent_id == ""){
			ojs_message.message_ok_show("chọn khu vực cha");
			return;
		}
		//@
		
		//
		let datas = {
			"datas":{
				shipping_speciality_name : shipping_speciality_name,
				shipping_speciality_price :  shipping_speciality_price,
				shipping_speciality_show : shipping_speciality_show,
				shipping_speciality_parent_id : shipping_speciality_parent_id,
				shipping_speciality_code: shipping_speciality_code
			}
		}
		//console.log(datas,shipping_id);		
		//return;
		
		ojs_shipping_speciality_admin.ajax_update_admin(datas,shipping_id);	
		
	});//end of save ajax







///////////////////////////////////////////////////////
});//end of document
</script>






