<div id="content" class="content">

	<h1><a href="/stores/manage/<%= store_id %>/<%= user_id %>"><%= store_name %></a><i class="fas fa-chevron-right"></i>
	<a href="/brands/<%= store_id %>">Thương hiệu</a><i class="fas fa-chevron-right"></i><%= title %></h1>



	<div class="pro_content_edit">
		<div class="pro_col01">
			<div class="pro_box ten_sp_box">
				<h3>Tên thương hiệu</h3>
				<div class="inside">
					<input  <%- enable_text %>  type="text" class= "" value="<%- ojs_share.unCape(datas[0].brands_name) %>" id="brands_name"/>
				</div>
			</div>
			<div class="pro_box">
				<h3>Lời nhắn từ admin</h3>
				<div class="inside">
					<textarea   id="brands_qoute"  rows="5" cols="100%" ><%- ojs_share.unCape(datas[0].brands_qoute) %></textarea>
				</div>
			</div>
		</div>
		
