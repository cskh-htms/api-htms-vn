<script>
$(document).ready(function($){
/////////////////////////////////////////////////////	
	
	
	
	//@
	//@
	//@
	//@
	var store_id = $('#store_id').val();
	var brand_id = $('#brand_id').val();
	$(document).on('click','#btn_draf',function(e) {		
		e.preventDefault();
		var datas = get_datas();	
		
		datas.datas.brands_status_stores = 0;
		
		//console.log(datas);
		//return;
		
		ojs_brands.ajax_update(datas,brand_id);		
	});
	
	//@
	//@
	//@
	//@
	$(document).on('click','#btn_save',function(e) {		
		e.preventDefault();
		var datas = get_datas();	
		datas.datas.brands_status_stores = 1;
		//console.log(datas);
		//return;
		
		ojs_brands.ajax_update(datas,brand_id);	
	});
	
	
	
	
	
	
	
	
function get_datas(){
		//alert("hú hú");
		//return;
		var brands_name = $('#brands_name').val();	
		//@
		//@
		
		var brands_qoute =$("#brands_qoute").val();
		
		
		var brands_status_stores = $('#brands_status_stores  option:selected').val();	
		var brands_status_admin = $('#brands_status_admin  option:selected').val();	
		
		
		
		
		
		//
		var datas = {
			"datas":{
				brands_name : brands_name,
				brands_qoute : brands_qoute,
				brands_status_stores : brands_status_stores,
				brands_status_admin : brands_status_admin
			}
		}
		
		return datas;
		//console.log(datas);		
		//return;
	}
	//
	//
///////////////////////////////////////////////////////
});//end of document
</script>



