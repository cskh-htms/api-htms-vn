					<select  id="brands_status_stores" <%- enable_text3 %>>
						<%- ojs_share.show_status_select_share_all_two ( datas[0].brands_status_stores ) %> 
					</select>
				</div>
			</div>
				
			
			<div class="pro_box">
				<h3>Trạng thái admin</h3>
				<div class="inside">
					<select id="brands_status_admin" <%- enable_text2 %>>
						<%- ojs_share.show_status_select_share_all(datas[0].brands_status_admin ) %>
					</select>
				</div>
			</div>
		</div>
	</div>


