<script>
$(document).ready(function($){
/////////////////////////////////////////////////////	
	
	var user_id = $('#user_id').val();
	//@
	ojs_share_upload.show_anh_dai_dien('featured_image','img_box_dai_dien',"","");	
	//@
	//@
	
	//@
	$(document).on('click','#btn_featured_image',function(e) {		
		e.preventDefault();		
		$('#upload_image').trigger( "click" );
	});
	
	
	
	
	
	//@
	$("#upload_image").on("change",function(){
		let input = this;
		ojs_share_upload.upload_anh_dai_dien(input,"featured_image","img_box_dai_dien",user_id)
	});		
	
	
	
	
	
	
	
	//
	//xóa image dai dien
	$(document).on('click','.xoaAnhDaiDien',function(e) {		
		e.preventDefault();		
		
		// xoa image s3
		let products_speciality_featured_image = $('#featured_image').attr("data_value");
		let url = products_speciality_featured_image;
		
		//console.log(url);
		//return;
		
		
		//ojs_share_upload.delete_s3(url);
		ojs_share_upload.delete_wp(url);
		$('#featured_image').attr("data_value","");
		//xoa html
		$(this).parent(".img_box").remove();
		ojs_share_upload.set_value_anh_dai_dien('featured_image','img_box_dai_dien');
	});			
	
	//@
	//@
	//@
	//@
	var store_id = $('#store_id').val();
	var brand_id = $('#brand_id').val();
	
	
	
	
	//@
	//@
	//@
	//@
	$(document).on('click','#btn_save',function(e) {		
		e.preventDefault();
		var datas = get_datas();	

		if(datas.datas.brands_status_update == 1){
			datas.datas.brands_status_admin = 2
		}else{
			datas.datas.brands_status_admin = 4			
		}


		//console.log(datas);
		//return;
		
		ojs_brands.ajax_update(datas,brand_id);	
	});
	
	
	
	//@
	//@
	//@
	//@
	$(document).on('click','#btn_draf',function(e) {		
		e.preventDefault();
		var datas = get_datas();	

		datas.datas.brands_status_admin = 0;

		//console.log(datas);
		//return;
		
		ojs_brands.ajax_update(datas,brand_id);	
	});	
	
	
	
	
function get_datas(){
		//alert("hú hú");
		//return;
		var brands_name = $('#brands_name').val();	
		//@
		//@
		
		var brands_qoute =$("#brands_qoute").val();
		var brands_status_admin = $('#brands_status_admin  option:selected').val();	
		var brands_status_update = $('#brands_status_update').val();
		var brands_featured_image = $('#featured_image').attr('data_value');
		let brands_information = $('#noi_dung').val();		
		
		
		//
		var datas = {
			"datas":{
				brands_name : brands_name,
				brands_featured_image : brands_featured_image,
				brands_information : brands_information,				
				brands_qoute : brands_qoute,
				brands_status_admin : brands_status_admin,
				brands_status_update:brands_status_update,
				brands_stores_id : store_id
			}
		}
		
		return datas;
		//console.log(datas);		
		//return;
	}
	//
	//
///////////////////////////////////////////////////////
});//end of document
</script>



