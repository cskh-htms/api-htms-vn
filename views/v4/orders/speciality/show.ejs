<div id="content" class="content">

	<h1><%= title %></h1>

	<% 
	if(datas.length > 0){
	%>	
		<div class="order_content">
			<div class="pro_box order_detail">
				<h3>Thông tin</h3>	
				<div class="inside">
					<div class="value_row">
						<span>ID đơn hàng</span>
						<input type="text" disabled class= "" value="<%= datas[0].orders_speciality_ID %>" id="orders_speciality_ID"/>
					</div>		

					<div class="value_row">
						<span>Ngày đặt hàng</span>
						<input type="text" disabled class= "" value="<%- ojs_share.unCape(datas[0].orders_speciality_date_orders) %>" id="orders_speciality_date_orders"/>
					</div>	
					
					<div class="value_row">
						<span>Họ</span>
						<input type="text" disabled class= "" value="<%- ojs_share.unCape(datas[0].users_first_name) %>" id="users_first_name"/>
					</div>	
						
					<div class="value_row">
						<span>Tên</span>
						<input type="text" disabled class= "" value="<%- ojs_share.unCape(datas[0].users_last_name) %>" id="users_last_name"/>
					</div>	
					
					<div class="value_row">
						<span>Điện thoại</span>
						<input type="text"  class= "" value="<%- ojs_share.unCape(datas[0].orders_speciality_phone) %>" id="orders_speciality_phone"/>
					</div>	
						
					<div class="value_row">
						<span>Email</span>
						<input type="text"  class= "" value="<%- ojs_share.unCape(datas[0].orders_speciality_email) %>" id="orders_speciality_email"/>
					</div>	
					
					<div class="value_row">
						<span>Địa chỉ giao hàng</span>
						<input type="text"  class= "" value="<%- ojs_share.unCape(datas[0].orders_speciality_adress) %>" id="orders_speciality_adress"/>
					</div>		
					
					<div class="value_row">
						<span>Ghi chú giao hàng</span>
						<input type="text"  class= "" value="<%- ojs_share.unCape(datas[0].orders_speciality_notes) %>" id="orders_speciality_notes"/>
					</div>	
				</div>
			</div>
		
			<div class="pro_box trang_thai_box">
				<h3>Trạng thái</h3>	
				<div class="inside">
					<span>Thanh toán:</span>
					<select id="orders_speciality_status_payment">
						<%- ojs_share.show_status_checkout(datas[0].orders_speciality_status_payment) %>
					</select>	
					<span>Hoàn thành:</span>	
					<select id="orders_speciality_status_orders">
						<%- ojs_share.show_status_orders(datas[0].orders_speciality_status_orders) %>
					</select>
				</div>
			</div>	
		</div>
	<% 
	}
	%>		
	
	<% 
	if(orders_detail.length > 0){
	%>	
	
		<div class="order-box" id="order-box">
			<% include ../../masterpage/widget-orders-detail-show-tables %>
		</div>
	<% 
	}
	%>	
	
<div class="btn_box">
	<a href="/orders/speciality/" class="btn_back">Quay về</a>
	<button id="btn_save" class="btn_save">Save</button>
</div>	
	


<input type="hidden" id="user_id" value="<%= user_id %>"/>
<input type="hidden" id="order_id" value="<%= order_id %>"/>





</div>
