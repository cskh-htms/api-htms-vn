<script>
$(document).ready(function(){
////////////////////////////////////////////////////
	
	//login
	$(document).on('click','#xoa',function(e) {
		let phone = $('#phone_number').val();
		let ly_do = $('#ly-do option:selected').val();


		if(phone == ""){
			ojs_message.message_ok_show("vui lòng nhập số điện thoại");
			return;
		}else{			
			//var filter = /^[0-9]{10,11}+$/;
			
			var filter =/^((\+[1-9]{1,4}[ \-]*)|(\([0-9]{2,3}\)[ \-]*)|([0-9]{2,4})[ \-]*)*?[0-9]{3,4}?[ \-]*[0-9]{3,4}?$/;
			
			if (filter.test(phone)) {
	
			}else {
				ojs_message.message_ok_show("vui lòng nhập số");
				return
			}			
		}




		var datas = { 
			datas:{ phone: phone, ly_do:ly_do }
		};
		//goi api
		$.ajax({
			type : "POST",	  
			contentType : "application/json",
			url : ojs_loader.host + "/users/xoa-tai-khoan",
			data : JSON.stringify(datas),
			dataType : 'json',
			beforeSend:  function(xhr){
				ojs_loadding.ajax_show_loadding();
			},			  
			error: function (request, status, error) {
				ojs_loader.show_ajax_error(error);
				ojs_loadding.ajax_hide_loadding();
			},
			success : function(result) {
				console.log(result);
				ojs_message.message_ok_show("Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi. Chúng tôi sẽ tiến hành xóa tài khỏan của bạn. thời gian sử lý 72h làm việc");
				ojs_loadding.ajax_hide_loadding();

			}			  
		});
	});
		
/////////////////////////////////////////////////////	
});
</script>	













