

<% if( typeof review_list == 'object' && review_list){ } else{ review_list=[] } %>

<table class="table-list">
	<thead>
		<tr>
			<th class="user-name">Sản phẩm</th>
			<th class="user-name"  style="text-align:center;">Số sao</th>
			<th class="user-name">Nội dung</th>
			<th class="user-name">Người bình luận</th>
			<th class="user-name">Ngày bình luận</th>			
			<th class="user-name">Trạng thái admin</th>
		</tr>
	</thead>
	<tbody>

	<% 
	for( var  x in review_list ) { 
	%>

	   <tr>
			<td class="user-name">
				<a href="#"><img class="review-iamge" src="<%- review_list[x].products_speciality_featured_image %>"/>			
				</a>			
				<a href="#"><%- review_list[x].products_speciality_name %></a>
				<div class="row-actions">
					<span class="edit"><a href="/reviews/speciality/show/<%= review_list[x].reviews_speciality_ID  %>">Chỉnh sửa</a> | </span>
					<span class="delete"><a href="#" data_review_id="<%= review_list[x].reviews_speciality_ID  %>" class="submitdelete">Xóa</a></span>
					<span class="duyet"><a href="#" data_review_id="<%= review_list[x].reviews_speciality_ID  %>" class="submitdelete">Duyệt</a></span>	
				</div>
			</td>
			<td class="user-name" style="text-align:center;">[<%= review_list[x].reviews_speciality_number_star %>]</td>	
			<td class="user-name"><%- ojs_share.unCape(review_list[x].reviews_speciality_contents) %></td>	
			<td class="user-name"><%= review_list[x].users_full_name %></td>				
			<td class="user-name"><%= review_list[x].reviews_speciality_date_created %></td>
			<td class="user-name"><%- ojs_share.show_table_status_product(review_list[x].reviews_speciality_status_admin ) %></td>			
			
	   </tr>
	   


	<% } %>
	
	</tbody>
	<tfoot>
		<tr>
			<th class="user-name">Sản phẩm</th>
			<th class="user-name">Số sao</th>
			<th class="user-name">Nội dung</th>
			<th class="user-name">Người bình luận</th>
			<th class="user-name">Ngày bình luận</th>			
			<th class="user-name">Trạng thái admin</th>
		</tr>
	</tfoot>
</table>