<script>
$(document).ready(function($){
/////////////////////////////////////////////////////	
	// ajax luu san pham
	$(document).on('click','#btn_save',function(e) {		
		e.preventDefault();
		//alert("hú hú");
		//return;
		

		//@
		let review_id = $('#review_id').val();
		let reviews_speciality_date_created = $('#reviews_speciality_date_created').val();
		let reviews_speciality_number_star = $('#reviews_speciality_number_star').val();
		//@
		//@
		let reviews_speciality_status_store = $('#reviews_speciality_status_store  option:selected').val();
		let reviews_speciality_status_admin = $('#reviews_speciality_status_admin  option:selected').val();
		//@
		let reviews_speciality_contents = $('#noi_dung').val();
		
		//
		let datas = {
			"datas":{
				reviews_speciality_status_admin : reviews_speciality_status_admin,
				reviews_speciality_contents : reviews_speciality_contents,
				reviews_speciality_date_created : reviews_speciality_date_created,
				reviews_speciality_number_star : reviews_speciality_number_star
			}
		}
		//console.log(datas);		
		//return;
		
		ojs_reviews_speciality.ajax_update(datas,review_id);	
		
		
	});//end of save ajax
	//
	//
///////////////////////////////////////////////////////
});//end of document
</script>













