#fillter-inner {
    display: flex;
	justify-content: center;
}
.filletr-btn{
    display: flex;
    position: relative;
    padding: 7px 10px;
    border: 1px solid #ccc;
    border-radius: 10px;
	margin-right: 30px;
}
.f-x {
	position: absolute;
    right: -25px;
    top: 5px;
    border: 1px solid #27ad43;
    display: flex;
    width: 20px;
    height: 20px;
    align-items: center;
    justify-content: center;
    color: red;
    border-radius: 50px;
    text-indent: -100px;
    overflow: hidden;
}

.filletr-btn.reset-btn {
    background-color: #4a914b;
    color: white;
    cursor: pointer;
}
